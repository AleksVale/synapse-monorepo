{
  "name": "synapse-monorepo",
  "version": "1.0.0",
  "description": "Synapse monorepo with React/Vite web app, NestJS API and shared types",
  "private": true,
  "scripts": {
    "build": "npm run build -w @synapse/shared-types && npm run build -w @synapse/api && npm run build -w @synapse/web",
    "build:shared-types": "npm run build -w @synapse/shared-types",
    "build:api": "npm run build -w @synapse/api",
    "build:web": "npm run build -w @synapse/web",
    "dev": "concurrently \"npm run dev -w @synapse/api\" \"npm run dev -w @synapse/web\"",
    "dev:web": "npm run dev -w @synapse/web",
    "dev:api": "npm run dev -w @synapse/api",
    "start": "npm run start -w @synapse/api",
    "test": "npm run test --workspaces --if-present",
    "test:api": "npm run test -w @synapse/api",
    "test:web": "npm run test -w @synapse/web",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "rm -rf dist node_modules packages/*/node_modules packages/*/dist",
    "db:generate": "npm run db:generate -w @synapse/api",
    "db:push": "npm run db:push -w @synapse/api",
    "db:migrate": "npm run db:migrate -w @synapse/api",
    "db:studio": "npm run db:studio -w @synapse/api"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {}
}
