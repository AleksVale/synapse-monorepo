{
  "name": "synapse-monorepo",
  "version": "1.0.0",
  "description": "Synapse monorepo with React/Vite web app, NestJS API and shared types",
  "private": true,
  "scripts": {
    "build": "nx run-many -t build",
    "build:shared-types": "nx build shared-types",
    "build:api": "nx build api",
    "build:web": "nx build web",
    "dev": "nx run-many -t dev --parallel=2 --projects=api,web",
    "dev:web": "nx serve web",
    "dev:api": "nx dev api",
    "start": "nx run-many -t serve",
    "test": "nx run-many -t test",
    "test:api": "nx test api",
    "test:web": "nx test web",
    "lint": "nx run-many -t lint",
    "lint:fix": "nx run-many -t lint --fix",
    "type-check": "nx run-many -t type-check",
    "clean": "nx reset && rm -rf dist node_modules packages/*/node_modules",
    "graph": "nx graph",
    "affected": "nx affected",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test",
    "db:generate": "nx db:generate api",
    "db:push": "nx db:push api",
    "db:migrate": "nx db:migrate api",
    "db:studio": "nx db:studio api"
  },
  "devDependencies": {
    "@nx/nest": "^21.6.5",
    "@nx/node": "^21.6.5",
    "@nx/react": "^21.6.5",
    "@nx/vite": "^21.6.5",
    "@nx/workspace": "^21.6.5",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "nx": "^21.6.5",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
