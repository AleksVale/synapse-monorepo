{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "../generated/**/*",
        "outDir": "dist",
        "watchAssets": true
      }
    ]
  },
  "watchAssets": {
    "paths": ["../shared-types/src/**/*"]
  }
}
