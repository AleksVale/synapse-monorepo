{
  "name": "shared-types",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/shared-types/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:lib"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/shared-types",
        "main": "packages/shared-types/src/index.ts",
        "tsConfig": "packages/shared-types/tsconfig.json",
        "assets": [
          {
            "glob": "package.json",
            "input": "packages/shared-types",
            "output": "."
          },
          {
            "glob": "README.md",
            "input": "packages/shared-types",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/shared-types/**/*.ts"]
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/shared-types"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'No tests defined for shared-types'",
        "cwd": "packages/shared-types"
      }
    }
  }
}
